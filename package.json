{
	"name": "server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"watch-node": "nodemon dist/src/index.js",
		"dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
		"build": "npx tsc && npx tsc-alias",
		"watch-ts": "npx tsc -w",
		"test": "npx cross-env NODE_ENV=test jest --no-cache --watchAll=false --color",
		"test:watch": "npx cross-env NODE_ENV=test jest --watch --no-cache --onlyChanged ",
		"test:coverage": "npx cross-env NODE_ENV=test jest --coverage",
		"build:deploy": "npm run build && git subtree split --prefix dist -b dist && git push -u origin dist",
		"jobs:dev": "ts-node-dev -r tsconfig-paths/register src/jobs/run_jobs.ts",
		"jobs:prod": "node dist/jobs/run_jobs.js"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
