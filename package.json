		"cloudinary": "^1.41.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"expo-server-sdk": "^4.0.0",
		"express": "^4.21.2",
		"graphql": "^16.11.0",
		"graphql-compose": "^9.1.0",
		"graphql-compose-connection": "^8.2.1",
		"graphql-compose-mongoose": "^10.0.0",
		"graphql-tag": "^2.12.6",
		"jest": "^30.0.3",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.16.1",
		"multer": "^2.0.1",
		"multer-storage-cloudinary": "^4.0.0",
		"node-cron": "^4.2.1",
		"supertest": "^7.1.1",
		"winston": "^3.17.0",
		"winston-mongodb": "^7.0.0"
	},
	"devDependencies": {
